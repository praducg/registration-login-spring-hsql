ALTER SESSION SET CURRENT_SCHEMA = POC_USR;

DROP TABLE POC_USR.CRT_USER;

DROP TABLE POC_USR.CRT_ROLE_MASTER;

DROP TABLE POC_USR.CRT_RELEASE_DATES;

DROP TABLE POC_USR.CRT_PROJECT_INFO;

DROP TABLE POC_USR.CRT_RELEASE_MASTER;

CREATE TABLE POC_USR.CRT_ROLE_MASTER
(
 
  CRT_ROLE_MASTER_ROLE_ID    NUMBER(2)    NOT NULL,
  CRT_ROLE_MASTER_ROLE_NAME  VARCHAR2(50) NOT NULL,
  CONSTRAINT CRT_ROLE_MASTER_PK PRIMARY KEY (CRT_ROLE_MASTER_ROLE_ID)
);

--INSERT INTO POC_USR.CRT_ROLE_MASTER(CRT_ROLE_MASTER_ROLE_ID, CRT_ROLE_MASTER_ROLE_NAME) VALUES (1,'SUPER ROLE');
--TABLESPACE PROFILE_DATA01;

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_ROLE_MASTER TO DV_WWWDML;

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_ROLE_MASTER TO DV_WWWDML;

GRANT SELECT ON poc_usr.CRT_ROLE_MASTER TO DV_WWWSELECT;

CREATE TABLE POC_USR.CRT_USER
(
  CRT_USER_USERID  VARCHAR2(15) NOT NULL,
  CRT_USER_PASSWORD  VARCHAR2(40)  NOT NULL,
  CRT_USER_ROLE_ID	 NUMBER(2)    NOT NULL,
  CONSTRAINT CRT_USER_PK PRIMARY KEY (CRT_USER_USERID),
  CONSTRAINT CRT_USER_FK FOREIGN KEY (CRT_USER_ROLE_ID) REFERENCES CRT_ROLE_MASTER(CRT_ROLE_MASTER_ROLE_ID)
)
;

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_USER TO DV_WWWDML;

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_USER TO DV_WWWDML;

GRANT SELECT ON poc_usr.CRT_USER TO DV_WWWSELECT;

CREATE TABLE POC_USR.CRT_RELEASE_MASTER
(
  CRT_RELEASE_MASTER_REL_NUMBER VARCHAR2(10)  NOT NULL,
  CRT_RELEASE_MASTER_REL_DESC  VARCHAR2(100),
  CRT_RELEASE_MASTER_REL_STATUS NUMBER(2) NOT NULL,
  CRT_RELEASE_MASTER_REL_MODE NUMBER(2) NOT NULL,
  CONSTRAINT CRT_RELEASE_MASTER_PK PRIMARY KEY (CRT_RELEASE_MASTER_REL_NUMBER)
);
--1)Here REL_STATUS will hold 0,1,2 where in 0 for entry,1 for active,2 for inactive
--2)REL_MODE will hold 0,1 [EXIST,NOT EXIST]

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_RELEASE_MASTER TO DV_WWWDML;

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_RELEASE_MASTER TO DV_WWWDML;

GRANT SELECT ON poc_usr.CRT_RELEASE_MASTER TO DV_WWWSELECT;

CREATE TABLE CRT_RELEASE_DATES
(
  CRT_RELEASE_DATES_REL_NUMBER VARCHAR2(10)  NOT NULL,
  SIT_START_DATE  DATE,
  QA_START_DATE DATE,
  STAGING_START_DATE DATE,
  PRODUCTION_DATE DATE,
  CONSTRAINT CRT_RELEASE_DATES_FK FOREIGN KEY (CRT_RELEASE_DATES_REL_NUMBER) REFERENCES CRT_RELEASE_MASTER(CRT_RELEASE_MASTER_REL_NUMBER)
);

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_RELEASE_DATES TO DV_WWWDML;

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_RELEASE_DATES TO DV_WWWDML;

GRANT SELECT ON poc_usr.CRT_RELEASE_DATES TO DV_WWWSELECT;


CREATE TABLE POC_USR.CRT_PROJECT_INFO
(
  CRT_PROJECT_INFO_REL_NUMBER VARCHAR2(10)  NOT NULL,
  CRT_PROJECT_INFO_PROJECT_ID VARCHAR2(50),
  CRT_PROJECT_INFO_PROJECT_DESC VARCHAR2(100),  
 CONSTRAINT CRT_PROJECT_INFO_PK PRIMARY KEY (CRT_PROJECT_INFO_PROJECT_ID),
  CONSTRAINT CRT_PROJECT_INFO_FK FOREIGN KEY (CRT_PROJECT_INFO_REL_NUMBER) REFERENCES CRT_RELEASE_MASTER(CRT_RELEASE_MASTER_REL_NUMBER)
);

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_PROJECT_INFO TO DV_WWWDML;

GRANT SELECT, INSERT, UPDATE, DELETE ON poc_usr.CRT_PROJECT_INFO TO DV_WWWDML;

GRANT SELECT ON poc_usr.CRT_PROJECT_INFO TO DV_WWWSELECT;
